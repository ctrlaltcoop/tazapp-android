<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           android:id="@+id/drawer_layout"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/player_layout"
                android:layout_height="48dp" android:background="@color/color_accent">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/play_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_pause_black_24dp"
                    android:clickable="true"
                    app:tint="@color/player_button"
                    android:scaleType="center"/>

            <ImageView
                    app:tint="@color/player_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_stop_black_24dp"
                    android:id="@+id/stop_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/play_button"
                    android:scaleType="center"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <ImageView
                    app:tint="@color/player_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_replay_black_24dp"
                    android:id="@+id/imageView2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/play_button"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="center"
                    app:layout_constraintHorizontal_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                android:fitsSystemWindows="true"
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading"
                    android:layout_gravity="center"/>


        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        style="@style/reader_index_drawer"
        android:paddingTop="@dimen/reader_navdrawer_topmargin">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="@dimen/pageindex_thumbnail_image_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        style="@style/reader_pageindex_drawer"
        android:paddingTop="@dimen/reader_navdrawer_topmargin"/>

</androidx.drawerlayout.widget.DrawerLayout>