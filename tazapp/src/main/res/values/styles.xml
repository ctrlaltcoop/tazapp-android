<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="fontPath">fonts/TazWt07-Bold.otf</item>-->
    </style>

    <style name="SettingsLayout">
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="PreferenceLayout">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PreferenceLayout.SpecialWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SettingsLayout.SpecialWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SettingsGeneral">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@drawable/settings_textcolor</item>
    </style>

    <style name="SettingsHeadline" parent="SettingsGeneral">
        <item name="android:textColor">@color/settings_header_text_color</item>
    </style>

    <style name="SettingsNote" parent="SettingsGeneral">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/settings_note_text_color</item>
    </style>


    <style name="SettingsItem" parent="SettingsGeneral">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SettingsCheckbox" parent="SettingsItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="SettingsClickFrameCompat" parent="SettingsItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsClickFrame" parent="SettingsClickFrameCompat">
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SettingsClickFrame.Title">
        <item name="android:paddingTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:clickable">false</item>

        <item name="android:background">@null</item>
    </style>
    <style name="SettingsClickFrame.Value">
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>

        <item name="android:gravity">right</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsRadioButtonFrame" parent="SettingsClickFrame">

    </style>
    <style name="SettingsRadioButtonFrame.Title">


    </style>
    <style name="SettingsRadioButtonFrame.Group">
    </style>
    <style name="SettingsRadioButtonFrame.Value">

        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsEdit">
        <item name="android:textColor">@drawable/settings_edittext_textcolor</item>
    </style>


    <style name="ImportLayout">
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImportLayout.SpecialWidth">
        <item name="android:layout_width">match_parent</item>
    </style>





    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="TechInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="TechInfo.Header">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="InfoCheckBox" parent="TextAppearance.AppCompat.Small">
        <item name="buttonTint">@color/info_checkbox_color</item>
        <item name="android:button">@drawable/info_checkbox_drawable</item>
    </style>

    <style name="ReaderButton">
        <item name="tint">@color/reader_button</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

</resources>